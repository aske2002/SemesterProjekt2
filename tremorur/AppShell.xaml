<?xml version="1.0" encoding="UTF-8"?>
<Shell
    x:Class="tremorur.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:tremorur"
    xmlns:vw="clr-namespace:tremorur.Views"
    Title="Test"
    x:Name="shell"
    BackgroundColor="Transparent"
    FlyoutBackgroundColor="Transparent"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBackdrop="Transparent"
    mc:Ignorable="d">
    <FlyoutItem Title="HomePage">
        <ShellContent
            ContentTemplate="{DataTemplate vw:HomePage}"
            Route="home"/>
    </FlyoutItem>
    <FlyoutItem Title="SetAlarmPage">
        <ShellContent
            ContentTemplate="{DataTemplate vw:SetAlarmPage}"
            Route="setAlarm"/>
    </FlyoutItem>
    <FlyoutItem Title="SetVibrationPage">
        <ShellContent
            ContentTemplate="{DataTemplate vw:SetVibrationsPage}"
            Route="setVibration"/>
    </FlyoutItem>
    <FlyoutItem Title="MedicationAlarmPage">
        <ShellContent
            ContentTemplate="{DataTemplate vw:MedicationAlarmPage}"
            Route="medicationPage"/>
    </FlyoutItem>

	<FlyoutItem Title="Alarmer" Route="AlarmListPage">
		<ShellContent ContentTemplate="{DataTemplate local:AlarmListPage}" />
	</FlyoutItem>
    <FlyoutItem Title="Bluetooth List">
        <ShellContent
            ContentTemplate="{DataTemplate vw:BluetoothConnectPage}"
            Route="bluetoothConnect"/>
    </FlyoutItem>
    <FlyoutItem Title="Bluetooth Device">
        <ShellContent
            ContentTemplate="{DataTemplate vw:BluetoothDevPage}"
            Route="bluetoothDev"/>
    </FlyoutItem>
</Shell>
