<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="tremorur.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:tremorur.Controls"
    xmlns:vm="clr-namespace:tremorur.ViewModels"
    x:DataType="vm:HomeViewModel"
    mc:Ignorable="d">
    <controls:CircularPageWrapper>
        <controls:CircularPageWrapper.ContentInside>
            <Grid BackgroundColor="Black"
                  RowDefinitions="Auto,*,Auto"
                  ColumnDefinitions="Auto,*,Auto">
                <!--Deler skærmen i to rækker og to kolonner-->
                <Label
                        x:Name="ClockLabel"
                        Text="00:00"
                        FontSize="130"
                        FontAttributes="Bold"
                        TextColor="White"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>

                <Label
                        x:Name="LevelLabel"
                        Text="Level: 1"
                        FontSize="Caption"
                        FontAttributes="Bold"
                        TextColor="White"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"/>
                
                <Label
                    x:Name="DateLabel"
                    Text="tir. 12. jan."
                    FontSize="25"
                    FontAttributes="Bold"
                    TextColor="White"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    VerticalOptions="StartAndExpand"
                    HorizontalOptions="Center"/>

                <!--Knap i øverste venstre hjørne-->
                <Button
                        x:Name="OkBtn"
                        Text="OK"
                        TextColor="White"
                        BackgroundColor="Black"
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"/>
                <!--Knap i øverste højre hjørne-->
                <Button
                        x:Name="OpBtn"
                        Text="Op"
                        TextColor="White"
                        BackgroundColor="Black"
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalOptions="Start"
                        HorizontalOptions="End"/>
                <!--Knap i nederste venstre hjørne-->
                <Button
                        x:Name="AnnullerBtn"
                        Text="Annuller"
                        TextColor="White"
                        BackgroundColor="Black"
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalOptions="End"
                        HorizontalOptions="Start"/>
                <!--Knap i nederste højre hjørne-->
                <Button
                        x:Name="NedBtn"
                        Text="Ned"
                        TextColor="White"
                        BackgroundColor="Black"
                        Grid.Row="2"
                        Grid.Column="1"
                        VerticalOptions="End"
                        HorizontalOptions="End"/>
            </Grid>
        </controls:CircularPageWrapper.ContentInside>
    </controls:CircularPageWrapper>
</ContentPage>