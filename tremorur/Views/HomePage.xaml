<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="tremorur.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:tremorur.Controls"
    xmlns:vm="clr-namespace:tremorur.ViewModels"
    x:DataType="vm:HomeViewModel"
    mc:Ignorable="d">
    <controls:CircularPageWrapper>
        <controls:CircularPageWrapper.ContentInside>
            <Grid RowDefinitions="*,Auto"
                  ColumnDefinitions="*,Auto">
                <!--Deler skærmen i to rækker og to kolonner-->
                <StackLayout
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <Label
                        x:Name="ClockLabel"
                        Text="00:00"
                        FontSize="Title"
                        FontAttributes="Bold"
                        TextColor="Blue"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>

                    <Label
                        x:Name="LevelLabel"
                        Text="Level: 1"
                        FontSize="Caption"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                        HorizontalOptions="End"/>


                    <!--Knap i øverste venstre hjørne-->
                    <Button
                        x:Name="OkBtn"
                        Text="OK"
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalOptions="Start"
                        HorizontalOptions="Start"/>
                    <!--Knap i øverste højre hjørne-->
                    <Button
                        x:Name="OpBtn"
                        Text="Op"
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalOptions="Start"
                        HorizontalOptions="End"/>
                    <!--Knap i nederste venstre hjørne-->
                    <Button
                        x:Name="AnnullerBtn"
                        Text="Annuller"
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalOptions="End"
                        HorizontalOptions="Start"/>
                    <!--Knap i nederste højre hjørne-->
                    <Button
                        x:Name="NedBtn"
                        Text="Ned"
                        Grid.Row="1"
                        Grid.Column="1"
                        VerticalOptions="End"
                        HorizontalOptions="End"/>


                </StackLayout>
                <Grid
                    Grid.Row="1"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundDark},
                                                  Light={StaticResource Primary}}">

                    <Label
                        x:Name="VersionLabel"
                        HorizontalOptions="Center"
                        TextColor="{StaticResource White}"
                        VerticalOptions="Center"/>

                </Grid>
            </Grid>
        </controls:CircularPageWrapper.ContentInside>
    </controls:CircularPageWrapper>
</ContentPage>