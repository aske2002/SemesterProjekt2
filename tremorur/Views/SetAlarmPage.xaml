<?xml version="1.0" encoding="UTF-8" ?>
<models:ContentPageWithButtons
    x:Class="tremorur.Views.SetAlarmPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:tremorur"
    xmlns:controls="clr-namespace:tremorur.Controls"
    xmlns:vm="clr-namespace:tremorur.ViewModels"
    xmlns:models="clr-namespace:tremorur.Models"
    ControlTemplate="{StaticResource LayoutTemplate}"
    mc:Ignorable="d">
    <Grid 
        RowDefinitions="Auto,*,Auto"
        ColumnDefinitions="*,*">
        
        <Label
            x:Name="AlarmLabel"
            Text="Indstil timer"
            FontSize="30"
            FontAttributes="Bold"
            TextColor="White"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalTextAlignment="Center"/>

        <Label
            x:Name="SetAlarm" 
            Text="00:00"
            FontSize="90"
            FontAttributes="Bold"
            TextColor="White"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            HorizontalTextAlignment="Center"/>
    </Grid>
</models:ContentPageWithButtons>
